<p id="notice"><%= notice %></p>

<h1>Your Bugs</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <% if bug.author == current_user %>
        <tr>
          <td><%= link_to bug.title, bug %></td>
          <td><%= link_to bug.project.title, project_path(bug.project) %></td>
          <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
