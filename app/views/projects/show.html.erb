<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Github url:</strong>
  <%= @project.github_url%>
</p>

<p>
  <strong>Author:</strong>
  <%= @project.author_id %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %> |
<%= link_to 'Add Bug', new_bug_path(project_id: @project.id) %>

<br>
<br>

<table class = "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <% if bug.project == @project %>
        <tr>
          <td><%= link_to bug.title, bug %></td>
          <td><%= bug.description.to_s[0,20] %></td>
          <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
